*{
}

ul{
	width: 300px;
	padding: 0 20pxl
}

ul li{
	list-style:none;
	padding: 20px 0;
	font-size: 0.9em;
}

form{
	display: inline-block;
	vertical-align: top;
	width: 400px;
	height: 320px;
	border: 1px solid 3498db;
	border-radius: 20px;
	margin: 150px 70px;
	background-color: #ecf0f1;
}

input[type="submit"]{
	margin-left: 50px;
	height: 25px;
	width: 100px;
	float: left;
	clear: both;
	font-size: 0.9em;
	border: 1px solid none;
	background-color: none;
	color: white;
	text-align: center;
	text-shadow: 0 1px 2px rgba(0, 0, 0, 0.25);
	background: #3498db;
	border: 0;
	border-bottom: 2px solid #2a8bcc;
	cursor: pointer;
	-webkit-box-shadow: inset 0 -2px #2a8bcc;

}

input[type="text"]{
	height: 25px;
	width: 200px;
	float: left;
	clear: both;
	border-radius: 5px ;
	border: 1px solid #000000;
	margin-top : -15px;
}





